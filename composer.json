{
    "name": "yiisoft/mutex",
    "type": "library",
    "description": "Yii Mutex Library",
    "keywords": [
        "yii",
        "mutex"
    ],
    "homepage": "https://www.yiiframework.com/",
    "license": "BSD-3-Clause",
    "support": {
        "issues": "https://github.com/yiisoft/mutex/issues?state=open",
        "forum": "https://www.yiiframework.com/forum/",
        "wiki": "https://www.yiiframework.com/wiki/",
        "irc": "irc://irc.freenode.net/yii",
        "source": "https://github.com/yiisoft/mutex"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "roave/infection-static-analysis-plugin": "^1.8",
        "spatie/phpunit-watcher": "^1.23",
        "vimeo/psalm": "^4.9"
    },
    "suggest": {
        "yiisoft/mutex-db-mysql": "version ^3.0 to use the MySQL driver for mutex",
        "yiisoft/mutex-db-oracle": "version ^3.0 to use the Oracle driver for mutex",
        "yiisoft/mutex-db-pgsql": "version ^3.0 to use the Postgres driver for mutex",
        "yiisoft/mutex-db-redis": "version ^3.0 to use the Redis driver for mutex",
        "yiisoft/mutex-file": "version ^3.0 to use the File driver for mutex"
    },
    "autoload": {
        "psr-4": {
            "Yiisoft\\Mutex\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiisoft\\Mutex\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit --testdox --no-interaction",
        "test-watch": "phpunit-watcher watch"
    }
}
